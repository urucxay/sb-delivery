<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="ShapeAppearanceImage" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">10dp</item>
    </style>

    <style name="ButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">18sp</item>
        <item name="android:letterSpacing">0</item>

        <item name="android:insetBottom">0dp</item>
        <item name="android:insetTop">0dp</item>

        <item name="cornerRadius">6dp</item>
    </style>

    <style name="ButtonStyle.Outline" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:letterSpacing">0</item>

        <item name="android:insetBottom">0dp</item>
        <item name="android:insetTop">0dp</item>

        <item name="rippleColor">@color/color_primary_light</item>
        <item name="strokeWidth">1dp</item>
        <item name="strokeColor">@color/color_gray_dark</item>

        <item name="cornerRadius">6dp</item>
    </style>

    <style name="TextInputLayoutAppearance" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="boxBackgroundColor">@color/color_white</item>
        <item name="boxCornerRadiusTopStart">6dp</item>
        <item name="boxCornerRadiusTopEnd">6dp</item>
        <item name="boxCornerRadiusBottomStart">6dp</item>
        <item name="boxCornerRadiusBottomEnd">6dp</item>
        <item name="boxStrokeColor">@color/color_white</item>
        <item name="strokeWidth">0dp</item>
        <item name="strokeColor">?attr/colorSecondary</item>
        <item name="boxStrokeWidthFocused">1dp</item>
        <item name="hintEnabled">false</item>


    </style>

</resources>